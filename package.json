{
  "name": "ruby-multitool",
  "displayName": "Ruby Multitool",
  "description": "will add later",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ruby-multitool.convertSingleKey",
    "onCommand:ruby-multitool.convertAllKeys",

    "onCommand:ruby-multitool.moveRight",
    "onCommand:ruby-multitool.moveLeft",

    "onCommand:ruby-multitool.jumpToLastMigration",

    "onCommand:ruby-multitool.foldAllDescribes",
    "onCommand:ruby-multitool.foldAllContexts",
    "onCommand:ruby-multitool.foldAllIts"

  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ruby-multitool.convertSingleKey",
        "title": "Ruby Multitool: Convert Single Key"
      },
      {
        "command": "ruby-multitool.convertAllKeys",
        "title": "Ruby Multitool: Convert All Keys"
      },

      {
        "command": "ruby-multitool.moveRight",
        "title": "Ruby Multitool: Move Key Value Right"
      },
      {
        "command": "ruby-multitool.moveLeft",
        "title": "Ruby Multitool: Move Key Value Left"
      },
      {
        "command": "ruby-multitool.jumpToLastMigration",
        "title": "Ruby Multitool: Jump to last created RoR migration"
      },
      {
        "command": "ruby-multitool.foldAllDescribes",
        "title": "Ruby Multitool: Fold all describes"
      },
      {
        "command": "ruby-multitool.foldAllContexts",
        "title": "Ruby Multitool: Fold all contexts"
      },
      {
        "command": "ruby-multitool.foldAllIts",
        "title": "Ruby Multitool: Fold all its"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
